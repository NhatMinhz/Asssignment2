@page
@model FUNewsManagementSystem.Pages.NewsArticles.HistoryModel

@{
    ViewData["Title"] = "My News History";
}

<h1>My News History</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StaffNews[0].NewsTitle)</th>
            <th>@Html.DisplayNameFor(model => model.StaffNews[0].CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.StaffNews[0].NewsStatus)</th>
            <th>@Html.DisplayNameFor(model => model.StaffNews[0].Category)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StaffNews)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NewsTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>@(item.NewsStatus ? "Published" : "Draft")</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                <td>
                    <a asp-page="/NewsArticles/Details" asp-route-id="@item.NewsArticleId" class="btn btn-info btn-sm">View</a>
                    <a asp-page="/NewsArticles/Edit" asp-route-id="@item.NewsArticleId" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to News</a>
</div>